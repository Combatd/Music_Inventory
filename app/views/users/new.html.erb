<h2>Sign Up for a new Account</h2>

<form action="<%= users_url %>" method="POST" class="form">
    <input type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <label for="user_email">Email Address</label>
    <input type="text"
        name="user[email]"
        id="user_email"
        value="<%= @user.email %>">

    <label for="user_password">Password</label>
    <input type="password"
        name="user[password]"
        id="user_password"
        value="<%= @user.password %>">

    <input type="submit" value="signup" class="form-button">
</form>